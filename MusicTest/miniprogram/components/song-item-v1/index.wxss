/* components/song-item-v1/index.wxss */
.song-item {
  width:  100%;
  display: flex;
  padding: 16rpx 0;
  align-items: center;
}
.image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
}
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.content .title {
  margin-bottom: 15rpx;
  font-size: 32rpx;
}
.content .author {
  font-size: 20rpx;
  color: #7a7a7a;
}
.arrow .icon{
  width: 50rpx;
  height: 50rpx;
}
/* components/peak-area-item/index.wxss */
.main {
  background-color: #ebebeb;
  border-radius: 12rpx;
  width: 100%;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.content {
  padding: 24rpx;
  flex: 1;
  overflow: hidden;
}
.content .title {
  font-size: 34rpx;
  font-weight: 800;
  margin-bottom: 10rpx;
}
.content .item {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 6rpx;
  
}
.item .singer {
  color: #aaa;
}
.album {
  width: 220rpx;
  display: block;
  position: relative;
}

.album .image {
  width: 100%;
  height: 100%;
  display: block;
  border-top-right-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
}

.album .play-counter {
  position: absolute;
  font-size: 22rpx;
  color: #fff;
  right: 0;
  bottom: 0;
  padding: 5rpx 10rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 12rpx;
}
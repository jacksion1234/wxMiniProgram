/* components/area-header/index.wxss */
.area-header {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left {
  font-size: 36rpx;
  font-weight: 700;
}
.right {
  vertical-align: middle;
  display: flex;
  align-items: center;
  font-size: 25rpx;
  color: #666;
}
.right .image {
  width: 40rpx;
  height: 40rpx;
}
.right .default-content {
  display: none;
}
.slot:empty + .default-content {
  display: flex;
}